<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 头部Head -->

    <RelativeLayout style="@style/layout_head" >

        <TextView
            style="@style/text_head"
            android:text="@string/text_head_recommand" />

        <ImageView
            android:id="@+id/back"
            style="@style/image_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:src="@drawable/back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/image_anim"
        android:layout_width="160dp"
        android:layout_height="5dp"
        android:background="#50BBFE" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>