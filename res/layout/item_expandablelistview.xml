<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/img_item_expandalbe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/bg"/>
    <TextView
        android:id="@+id/title_item_expandalbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="概述"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@id/img_item_expandalbe"
        android:textColor="#000"
        android:textSize="20sp"/>
    
    <TextView
        android:id="@+id/tag_item_expandable" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="台东区"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_item_expandalbe"
        android:layout_below="@id/title_item_expandalbe"
        android:background="#7000"/>
    
    <TextView 
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/preorder_flag"
        android:layout_toRightOf="@id/tag_item_expandable"
        android:layout_below="@id/title_item_expandalbe"
        />
    <TextView 
        android:id="@+id/desc_item_expandable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@id/tag_item_expandable"
        android:layout_toRightOf="@id/img_item_expandalbe"
        android:textColor="#6000"
        android:text="世界各国美食应有尽有,"/>
</RelativeLayout>
