<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/img_item_group"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="#4000"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_marginLeft="10dp" 
        android:id="@+id/name_item_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_item_group"
        android:textColor="#000"
        android:text="5月去香港"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/number_item_group"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_item_group"
        android:layout_below="@id/name_item_group"
        android:textSize="12sp"
        android:text="10/50"/>
    
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/desc_item_group"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_item_group"
        android:layout_toRightOf="@id/img_item_group"
        android:textColor="#4000"
        android:singleLine="true"
        android:text="5月去东京的小伙伴,嗨起来~"/>

</RelativeLayout>
